<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity"
    android:background="@drawable/background_color_gradient">

    <ImageView
        android:id="@+id/actLoginIvLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/actLoginEditTextUsername"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:alpha="0.7"
        android:background="@drawable/rounded_text"
        android:backgroundTint="@android:color/white"
        android:ems="15"
        android:hint="@string/app_username"
        android:inputType="text"
        android:minHeight="40dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actLoginIvLogo" />

    <EditText
        android:id="@+id/actLoginEditTextPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:alpha="0.7"
        android:background="@drawable/rounded_text"
        android:backgroundTint="@android:color/white"
        android:ems="15"
        android:hint="@string/app_password"
        android:inputType="textPassword"
        android:minHeight="40dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/actLoginEditTextUsername"
        app:layout_constraintStart_toStartOf="@+id/actLoginEditTextUsername"
        app:layout_constraintTop_toBottomOf="@+id/actLoginEditTextUsername" />

    <Button
        android:id="@+id/actLoginBtnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:width="250dp"
        android:background="@drawable/rounded_button"
        android:text="@string/app_login"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/actLoginEditTextPassword"
        app:layout_constraintStart_toStartOf="@+id/actLoginEditTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/actLoginEditTextPassword" />

    <Button
        android:id="@+id/actLoginBtnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:width="250dp"
        android:background="@drawable/rounded_button"
        android:text="@string/app_register"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/actLoginBtnLogin"
        app:layout_constraintStart_toStartOf="@+id/actLoginBtnLogin"
        app:layout_constraintTop_toBottomOf="@+id/actLoginBtnLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>