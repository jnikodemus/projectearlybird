<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/tv_self_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_text"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="Ich bin eine Nachricht"
        android:textIsSelectable="true"
        app:layout_constraintEnd_toStartOf="@+id/chat_self_row_iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/chat_self_row_iv_avatar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_self_row_iv_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/chatSelfRow_tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_self_row"
        app:layout_constraintEnd_toEndOf="@+id/tv_self_row" />

</androidx.constraintlayout.widget.ConstraintLayout>